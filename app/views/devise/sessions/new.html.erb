<%# scss読み込み %>
<%= stylesheet_link_tag "devise/login", :media => "all" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-login">
        <div class="field">
            <%= f.label :username, class: "formLabel" %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form formText" %>
        </div>

        <div class="field">
            <%= f.label :password, class: "formLabel" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form formText" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field formLabel formRemember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="actions">
            <%= f.submit "ログイン", class: "btn btnText" %>
        </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>